{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "OpenClaw Helm Chart Values Schema",
  "description": "JSON Schema for validating OpenClaw Helm chart values (with CN-IM support)",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "description": "Number of replicas. Must be 1 for StatefulSet mode since OpenClaw is a single-instance app",
      "default": 1,
      "enum": [1]
    },
    "image": {
      "type": "object",
      "description": "Image configuration",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Image repository",
          "default": "justlikemaki/openclaw-docker-cn-im"
        },
        "tag": {
          "type": "string",
          "description": "Image tag (defaults to Chart appVersion if not set)",
          "default": ""
        },
        "pullPolicy": {
          "type": "string",
          "description": "Image pull policy",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "Always"
        }
      },
      "required": ["repository", "pullPolicy"]
    },
    "imagePullSecrets": {
      "type": "array",
      "description": "Image pull secrets for private registries",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        }
      },
      "default": []
    },
    "nameOverride": {
      "type": "string",
      "description": "String to override the default name",
      "default": ""
    },
    "fullnameOverride": {
      "type": "string",
      "description": "String to override the default fullname",
      "default": ""
    },
    "serviceAccount": {
      "type": "object",
      "description": "Service account configuration",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Create service account",
          "default": true
        },
        "automountServiceAccountToken": {
          "type": "boolean",
          "description": "Automount service account token",
          "default": false
        },
        "annotations": {
          "type": "object",
          "description": "Service account annotations",
          "default": {}
        },
        "name": {
          "type": "string",
          "description": "Service account name (generated if empty)",
          "default": ""
        }
      }
    },
    "podAnnotations": {
      "type": "object",
      "description": "Pod annotations",
      "default": {}
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context",
      "default": {
        "fsGroup": 1000,
        "runAsNonRoot": true,
        "seccompProfile": { "type": "RuntimeDefault" }
      }
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context",
      "default": {
        "capabilities": { "drop": ["ALL"] },
        "readOnlyRootFilesystem": false,
        "runAsNonRoot": true,
        "runAsUser": 1000,
        "allowPrivilegeEscalation": false,
        "seccompProfile": { "type": "RuntimeDefault" }
      }
    },
    "service": {
      "type": "object",
      "description": "Service configuration",
      "properties": {
        "type": {
          "type": "string",
          "description": "Service type",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"],
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "description": "Service port",
          "minimum": 1,
          "maximum": 65535,
          "default": 18789
        },
        "targetPort": {
          "type": "integer",
          "description": "Target port on the container",
          "minimum": 1,
          "maximum": 65535,
          "default": 18789
        },
        "nodePort": {
          "type": ["integer", "null"],
          "description": "NodePort (only used when service.type is NodePort)",
          "minimum": 30000,
          "maximum": 32767,
          "default": null
        },
        "annotations": {
          "type": "object",
          "description": "Service annotations",
          "default": {}
        },
        "bridgeEnabled": {
          "type": "boolean",
          "description": "Enable bridge port for CN-IM channels",
          "default": false
        },
        "bridgePort": {
          "type": "integer",
          "description": "Bridge service port",
          "minimum": 1,
          "maximum": 65535,
          "default": 18790
        },
        "bridgeTargetPort": {
          "type": "integer",
          "description": "Bridge target port on the container",
          "minimum": 1,
          "maximum": 65535,
          "default": 18790
        }
      }
    },
    "ingress": {
      "type": "object",
      "description": "Ingress configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress",
          "default": false
        },
        "className": {
          "type": "string",
          "description": "Ingress class name",
          "default": ""
        },
        "annotations": {
          "type": "object",
          "description": "Ingress annotations",
          "default": {}
        },
        "hosts": {
          "type": "array",
          "description": "Ingress hosts",
          "items": {
            "type": "object",
            "properties": {
              "host": { "type": "string" },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": { "type": "string" },
                    "pathType": {
                      "type": "string",
                      "enum": ["Prefix", "Exact", "ImplementationSpecific"]
                    }
                  }
                }
              }
            }
          }
        },
        "tls": {
          "type": "array",
          "description": "TLS configuration",
          "items": {
            "type": "object",
            "properties": {
              "secretName": { "type": "string" },
              "hosts": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "default": []
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Resource requests and limits",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": { "type": ["string", "integer"], "default": "2000m" },
            "memory": { "type": "string", "default": "8Gi" }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": { "type": ["string", "integer"], "default": "250m" },
            "memory": { "type": "string", "default": "1Gi" }
          }
        }
      }
    },
    "autoscaling": {
      "type": "object",
      "description": "Horizontal Pod Autoscaler configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "minReplicas": { "type": "integer", "default": 1 },
        "maxReplicas": { "type": "integer", "default": 1 },
        "targetCPUUtilizationPercentage": { "type": "integer", "default": 80 },
        "targetMemoryUtilizationPercentage": { "type": "integer", "default": 80 },
        "metrics": { "type": "array", "default": [] },
        "behavior": { "type": "object", "default": {} }
      }
    },
    "nodeSelector": { "type": "object", "default": {} },
    "tolerations": { "type": "array", "default": [] },
    "affinity": { "type": "object", "default": {} },
    "topologySpreadConstraints": { "type": "array", "default": [] },
    "extraEnv": { "type": "array", "default": [] },
    "extraEnvFrom": { "type": "array", "default": [] },
    "extraVolumeMounts": { "type": "array", "default": [] },
    "extraVolumes": { "type": "array", "default": [] },
    "initContainers": { "type": "array", "default": [] },
    "sidecars": { "type": "array", "default": [] },
    "persistence": {
      "type": "object",
      "description": "Persistent Volume configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "type": {
          "type": "string",
          "description": "Persistence type: pvc or hostPath",
          "enum": ["pvc", "hostPath"],
          "default": "pvc"
        },
        "storageClass": { "type": "string", "default": "" },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany", "ReadWriteOncePod"],
          "default": "ReadWriteOnce"
        },
        "size": { "type": "string", "default": "10Gi" },
        "existingClaim": { "type": "string", "default": "" },
        "annotations": { "type": "object", "default": {} },
        "retainPolicy": {
          "type": "string",
          "enum": ["Retain", "Delete", "Recycle"],
          "default": "Retain"
        },
        "useStatefulSetVolumeClaim": { "type": "boolean", "default": true },
        "hostPath": { "type": "string", "default": "/data/openclaw" }
      }
    },
    "openclaw": {
      "type": "object",
      "description": "OpenClaw configuration",
      "properties": {
        "config": {
          "type": "object",
          "description": "OpenClaw gateway configuration (openclaw.json content)"
        }
      }
    },
    "secrets": {
      "type": "object",
      "description": "Secrets configuration",
      "properties": {
        "existingSecret": { "type": "string", "default": "" },
        "annotations": { "type": "object", "default": {} },
        "anthropicApiKey": { "type": "string", "description": "Anthropic API key" },
        "openaiApiKey": { "type": "string", "description": "OpenAI API key" },
        "discordBotToken": { "type": "string", "description": "Discord bot token" },
        "telegramBotToken": { "type": "string", "description": "Telegram bot token" },
        "slackBotToken": { "type": "string", "description": "Slack bot token" },
        "slackAppToken": { "type": "string", "description": "Slack app token" },
        "openclawGatewayToken": { "type": "string", "description": "Gateway authentication token" },
        "feishuAppId": { "type": "string", "description": "Feishu App ID" },
        "feishuAppSecret": { "type": "string", "description": "Feishu App Secret" },
        "dingtalkClientId": { "type": "string", "description": "DingTalk Client ID" },
        "dingtalkClientSecret": { "type": "string", "description": "DingTalk Client Secret" },
        "dingtalkRobotCode": { "type": "string", "description": "DingTalk Robot Code" },
        "dingtalkCorpId": { "type": "string", "description": "DingTalk Corp ID" },
        "dingtalkAgentId": { "type": "string", "description": "DingTalk Agent ID" },
        "qqbotAppId": { "type": "string", "description": "QQ Bot App ID" },
        "qqbotClientSecret": { "type": "string", "description": "QQ Bot Client Secret" },
        "wecomToken": { "type": "string", "description": "WeCom Token" },
        "wecomEncodingAesKey": { "type": "string", "description": "WeCom Encoding AES Key" }
      }
    },
    "livenessProbe": {
      "type": "object",
      "description": "Liveness probe configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "exec": {
          "type": "object",
          "properties": {
            "command": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["openclaw", "health"]
            }
          }
        },
        "initialDelaySeconds": { "type": "integer", "default": 30 },
        "periodSeconds": { "type": "integer", "default": 30 },
        "timeoutSeconds": { "type": "integer", "default": 10 },
        "failureThreshold": { "type": "integer", "default": 3 },
        "successThreshold": { "type": "integer", "default": 1 }
      }
    },
    "readinessProbe": {
      "type": "object",
      "description": "Readiness probe configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "exec": {
          "type": "object",
          "properties": {
            "command": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["openclaw", "health"]
            }
          }
        },
        "initialDelaySeconds": { "type": "integer", "default": 10 },
        "periodSeconds": { "type": "integer", "default": 10 },
        "timeoutSeconds": { "type": "integer", "default": 5 },
        "failureThreshold": { "type": "integer", "default": 3 },
        "successThreshold": { "type": "integer", "default": 1 }
      }
    },
    "startupProbe": {
      "type": "object",
      "description": "Startup probe configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "exec": {
          "type": "object",
          "properties": {
            "command": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["openclaw", "health"]
            }
          }
        },
        "initialDelaySeconds": { "type": "integer", "default": 10 },
        "periodSeconds": { "type": "integer", "default": 10 },
        "timeoutSeconds": { "type": "integer", "default": 5 },
        "failureThreshold": { "type": "integer", "default": 30 },
        "successThreshold": { "type": "integer", "default": 1 }
      }
    },
    "podDisruptionBudget": {
      "type": "object",
      "description": "Pod Disruption Budget configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "minAvailable": { "type": ["integer", "string"] },
        "maxUnavailable": { "type": ["integer", "string"] }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "secrets": {
            "properties": {
              "existingSecret": { "const": "" }
            }
          }
        }
      },
      "then": {
        "properties": {
          "secrets": {
            "required": ["openclawGatewayToken"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "autoscaling": {
            "properties": {
              "enabled": { "const": true }
            }
          }
        }
      },
      "then": {
        "properties": {
          "autoscaling": {
            "properties": {
              "minReplicas": { "enum": [1] },
              "maxReplicas": { "enum": [1] }
            },
            "required": ["minReplicas", "maxReplicas"]
          }
        }
      }
    }
  ]
}
